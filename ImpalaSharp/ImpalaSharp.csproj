<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp2.2</TargetFramework>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Description>Impala client library for .NET Core, using Thrift protocol
Forked from https://github.com/tckz/ImpalaSharp</Description>
    <Authors>tckz,Mikhail Burilov</Authors>
    <Company>Second Sight</Company>
    <PackageProjectUrl>https://github.com/s2shape/ImpalaSharp</PackageProjectUrl>
    <PackageId>ImpalaSharp.Core</PackageId>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="apache-thrift-netcore" Version="0.9.3.2" />
  </ItemGroup>

</Project>
